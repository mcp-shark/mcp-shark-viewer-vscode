{
  "name": "mcp-shark-viewer-for-vscode",
  "publisher": "MCPSharkInspector",
  "displayName": "MCP Shark Viewer",
  "description": "View and analyze MCP Shark traffic data directly in VS Code, Cursor, and Windsurf. Monitor packets, conversations, and statistics from your MCP server interactions.",
  "version": "1.0.4",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "mcp",
    "mcp-shark",
    "model-context-protocol",
    "database",
    "viewer",
    "monitoring",
    "debugging",
    "traffic",
    "packets"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:mcp-shark-traffic",
    "onCommand:mcp-shark.viewer.startServer",
    "onCommand:mcp-shark.viewer.stopServer",
    "onCommand:mcp-shark.viewer.openInspector",
    "onCommand:mcp-shark.viewer.refresh",
    "onCommand:mcp-shark.viewer.runLocalAnalysis"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-shark",
          "title": "MCP Shark",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "mcp-shark": [
        {
          "id": "mcp-shark-traffic",
          "name": "Traffic Inspector",
          "icon": "icon.png",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "mcp-shark.viewer.startServer",
        "title": "Start MCP Shark Server",
        "category": "MCP Shark",
        "icon": "$(play)"
      },
      {
        "command": "mcp-shark.viewer.stopServer",
        "title": "Stop MCP Shark Server",
        "category": "MCP Shark",
        "icon": "$(stop-circle)"
      },
      {
        "command": "mcp-shark.viewer.openInspector",
        "title": "Open Viewer",
        "category": "MCP Shark",
        "icon": "$(database)"
      },
      {
        "command": "mcp-shark.viewer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "mcp-shark.viewer.runLocalAnalysis",
        "title": "Run Local LLM Analysis",
        "category": "MCP Shark",
        "icon": "$(sparkle)"
      }
    ],
    "configuration": {
      "title": "MCP Shark",
      "properties": {
        "mcpShark.localAnalysis.bridgeEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the HTTP bridge so MCP Shark (or other tools) can request local analysis using the IDE's language model."
        },
        "mcpShark.localAnalysis.bridgePort": {
          "type": "number",
          "default": 9854,
          "description": "Port for the local LLM analysis bridge (POST /analyze with JSON body: { \"prompt\", \"context\" })."
        },
        "mcpShark.localAnalysis.modelVendor": {
          "type": "string",
          "default": "",
          "description": "Optional vendor filter for the IDE language model (e.g. 'copilot'). Use if you get 'model not supported' with the default model."
        },
        "mcpShark.server.localPath": {
          "type": "string",
          "default": "/Users/ruwan/dev/mcp-shark-org/mcp-shark",
          "description": "[Temporary] Path to local MCP Shark repo to test extension against a local build. When set, runs `node bin/mcp-shark.js` from that path instead of npx."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "mcp-shark.viewer.openInspector",
          "when": "view == mcp-shark-traffic",
          "group": "navigation"
        },
        {
          "command": "mcp-shark.viewer.refresh",
          "when": "view == mcp-shark-traffic",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mcp-shark.viewer.openInspector",
          "when": "view == mcp-shark-traffic",
          "group": "inline"
        },
        {
          "command": "mcp-shark.viewer.refresh",
          "when": "view == mcp-shark-traffic",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "validate": "node scripts/validate.js",
    "prebuild": "npm run validate",
    "test": "npm run validate"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  },
  "dependencies": {
    "sql.js": "^1.10.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-shark/mcp-shark-viewer-vscode"
  }
}
